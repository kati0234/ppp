<style>
  h2 {
    font-size: var(--fluid-16-33);
  }

  [popover] {
    display: none; /* Start som skjult */
  }
  p {
    color: var(--sort);
    font-size: var(--fluid-16-33);
  }

  .pop {
    background: var(--farve-5);

    display: flex;

    padding: 5rem;
    flex-direction: column;

    gap: 0.625rem;
    align-self: center;
    justify-self: center;
  }

  [popover] {
    pointer-events: none; /* Deaktiver klik n√•r popover er skjult */
    opacity: 0;
    border: none;
    translate: 0 -100%;
    transition: 0.6s;
    transition-property: opacity, display, translate;

    &:popover-open {
      @starting-style {
        opacity: 0;
        translate: 0 100%;
      }
      opacity: 1;
      translate: 0 0;
    }
  }

  [popover]::backdrop {
    background: rgba(255, 231, 231, 0.422);
    backdrop-filter: blur(16px);
  }

  button {
    font-family: Helvetica, sans-serif;
    font-weight: 400;
    text-transform: uppercase;
    background-color: rgba(255, 105, 180, 0);
    font-size: var(--fluid-16-33);
    padding: 1rem 1.9375rem;
    width: fit-content;
    height: fit-content;
    color: var(--farve-1);
    border: none;
  }

  header {
    position: sticky;
    top: 0;
    display: flex;
    justify-content: end;
    padding: 30px;
    padding-left: 1rem;
  }
</style>
