---
const { img, title, text, url } = Astro.props;
---

<div class="grid">
  <img src={img} alt="" />

  <div class="text">
    <h5>{title}</h5>
    <p>{text}</p>
    <a href={url}>g√• til side</a>
  </div>
</div>
<style>
  .grid {
    display: grid;
    grid-template-rows: repeat(2, auto);
    background: #8c2b32;

    .text {
      --flow-space: 0.8rem;
      padding: 2.5rem;
      display: flex;
      flex-direction: column;

      > * + * {
        margin-block-start: var(--flow-space, 1em);
        --flow-space: 0.8rem;
      }

      > a {
        place-self: end;
      }
    }
  }
  h5 {
    color: #fff;
    font-family: Helvetica;
    font-size: 1.5625rem;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    text-transform: uppercase;
  }
  p {
    color: #fff;
    font-family: Helvetica;
    font-size: 0.9375rem;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    text-transform: lowercase;
  }
  a {
    place-self: end;
    list-style: none;
    color: #fff;
    font-family: Helvetica;
    font-size: 1.25rem;
    font-style: italic;
    font-weight: 300;
    line-height: normal;
    text-transform: uppercase;
  }
</style>
